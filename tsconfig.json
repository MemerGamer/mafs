{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2021",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./build/type-declarations",
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "node",
    "checkJs": true
  },
  "files": ["src/index.tsx"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests/**/*", "src/**/*.test.*"]
}
